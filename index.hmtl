            const whatsappLink = document.getElementById('whatsapp-link');
            if (whatsappLink) {
                whatsappLink.href = whatsappUrl;
            }
        });

        // Basic logging setup for environment
        console.log("Portal UI Initialized. Awaiting VIP Subscription contact.");
